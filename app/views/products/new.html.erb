<h1>Product Insert Form</h1>
<%= form_for(@product, multipart: true) do |p| %>
<!-- multipart: trueイメージをアップロードしたいときに使う -->
<div class="">
  商品名
  <%= p.text_field :name %>
</div>
<div class="">
  値段
  <%= p.number_field :price %>
</div>
<div class="">
  商品説明
  <%= p.text_area :description %>
</div>
<div class="">
  商品画像
  <%= p.file_field :image %>
  <!-- progateで他のやり方もヤッたよ -->
</div>
<div class="">
  カテゴリー
  <%= p.select :category_id, options_from_collection_for_select(Category.all, :name, :name), :include_blank => "Choose Category" %>
</div>

  <%= p.submit '商品登録' %>
<% end %>
